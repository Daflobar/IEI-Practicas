<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<HBox fx:controller="books.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER">


    <GridPane hgap="30" vgap="20">
        <padding>
            <Insets left="10" bottom="10" top="10" right="10"></Insets>
        </padding>
        <Label text="Título"
               GridPane.columnIndex="0" GridPane.rowIndex="1">

        </Label>
        <TextField fx:id="title"
                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Autor"
               GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="author"
                   GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <CheckBox fx:id="amazon" text="Amazon"
                  GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <CheckBox fx:id="fnac" text="Fnac"
                  GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Button text="Buscar" fx:id="search"
                GridPane.columnIndex="0" GridPane.rowIndex="5">
        </Button>
        <Button text="Limpiar" fx:id="clear"
                    GridPane.columnIndex="1" GridPane.rowIndex="5"
                    visible="false">
        </Button>

        <Label fx:id="alert" text="Rellene al menos uno de los campos"
              textFill="red" visible="false"
               GridPane.hgrow="ALWAYS"
                GridPane.columnIndex="0"
                GridPane.rowIndex="6"/>


    </GridPane>

    <TableView fx:id="tableView"
               GridPane.columnIndex="2" GridPane.rowIndex="1"
               HBox.hgrow="ALWAYS"
               visible="false">
        <columns>
            <TableColumn text="Título">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Autor">
                <cellValueFactory>
                    <PropertyValueFactory property="author" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Precio">
                <cellValueFactory>
                    <PropertyValueFactory property="price" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Descuento">
                <cellValueFactory>
                    <PropertyValueFactory property="previousPrice" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>







</HBox>